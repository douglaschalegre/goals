# Database (SQLite)
DATABASE_PATH=./goals.db

# Cloudflare R2
R2_ACCOUNT_ID=your_account_id
R2_ACCESS_KEY_ID=your_access_key_id
R2_SECRET_ACCESS_KEY=your_secret_access_key
R2_BUCKET_NAME=goals-images
R2_PUBLIC_URL=https://your-custom-domain.com  # Your R2 public domain (without bucket name or trailing slash)

# Abacate Pay
ABACATE_PAY_API_KEY=your_api_key
ABACATE_PAY_WEBHOOK_SECRET=your_webhook_secret

# Email (Resend)
RESEND_API_KEY=re_your_api_key
RESEND_FROM_EMAIL=noreply@yourdomain.com

# App
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Cron Job Secret (for scheduled email sending)
CRON_SECRET=your_random_secret_string
